<h1>Mesi's Burgers App</h1>
<ul>
  {{#each burger}}
  {{#unless devoured}}
    <li>{{burger_name}}
        <button class="devour" data-id="{{this.id}}">Devour</button>
    </li>
  {{/unless}}  
  {{/each}}
</ul>
<input id="burgerInput" type="text" />
<button id="submit">Submit</button>
<ul>
  {{#each burger}}
    {{#if devoured}}
    <li>{{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul> 

